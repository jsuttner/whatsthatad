<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" />
            <gradient
                    android:startColor="@color/wta_grey_light"
                    android:centerColor="@color/wta_grey_light"
                    android:centerY="0.75"
                    android:endColor="@color/wta_grey_light"
                    android:angle="270"
            />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                <gradient
                        android:startColor="@color/wta_grey_dark"
                        android:centerColor="@color/wta_grey_dark"
                        android:centerY="0.75"
                        android:endColor="@color/wta_grey_dark"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                <gradient
                        android:startColor="@color/wta_blue_light"
                        android:centerColor="@color/wta_blue_light"
                        android:centerY="0.75"
                        android:endColor="@color/wta_blue_light"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
</layer-list>