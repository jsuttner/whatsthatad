<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/singleLevelTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/singleImage1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="1" />

            <ImageView
                android:id="@+id/singleImage2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="2" />

            <ImageView
                android:id="@+id/singleImage3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="3" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/singleImage4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="4" />

            <ImageView
                android:id="@+id/singleImage5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="5" />

            <ImageView
                android:id="@+id/singleImage6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="6" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/singleImage7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="7" />

            <ImageView
                android:id="@+id/singleImage8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="8" />

            <ImageView
                android:id="@+id/singleImage9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="9" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/singleImage10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="10" />

            <ImageView
                android:id="@+id/singleImage11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="11" />

            <ImageView
                android:id="@+id/singleImage12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:padding="2dp"
                android:src="@drawable/ic_launcher"
                android:tag="12" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/singleProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="0/12 Ads solved for the next level" 
            android:gravity="center"/>
            
        <ProgressBar
            android:id="@+id/singleProgressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
